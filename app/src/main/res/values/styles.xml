<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppThemeWallpaper" parent="android:Theme.Holo.Wallpaper">

    </style>

    <style name="AppThemeLight" parent="android:Theme.Holo.Light">
        
    </style>

    <style name="AppThemeBlack" parent="android:Theme.Black">

    </style>

    <style name="AppThemePanel" parent="android:Theme.Holo.Panel">

    </style>

    <!-- the theme applied to the application or activity -->
    <style name="NewTheme" parent="android:Theme.Holo.Wallpaper">
        <item name="android:actionBarStyle">@style/MyActionBarWidgetHoloActionBar</item>
    </style>

    <!-- Widget_DeviceDefault_ActionBar -->
    <style name="MyActionBarWidgetDeviceDefaultActionBar" parent="@android:style/Widget.DeviceDefault.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleTextPrimary</item>
    </style>


    <!-- Widget_ActionBar -->
    <style name="MyActionBarWidgetActionBar" parent="@android:style/Widget.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleTextPrimary</item>
    </style>

    <!-- Theme_WithActionBar -->
    <style name="MyActionBarThemeWithActionBar" parent="@android:style/Theme.WithActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleTextPrimary</item>
    </style>

    <!-- Theme_Holo_Light_DarkActionBar -->
    <style name="MyActionBarThemeHoloLightDarkActionBar" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleTextPrimary</item>
    </style>

    <!-- Theme_DeviceDefault_Light_DarkActionBar -->
    <style name="MyActionBarThemeDeviceDefaultLight" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:titleTextStyle">@style/MyActionBarTitleTextPrimary</item>
    </style>

    <!-- MyActionBarWidgetHoloLight styles -->
    <style name="MyActionBarWidgetHoloLight" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleTextPrimary</item>
    </style>

    <!-- MyActionBarWidgetHoloLightSolid styles -->
    <style name="MyActionBarWidgetHoloLightSolid" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:actionBarStyle">@style/MyActionBarTitleTextPrimary</item>
    </style>

    <!-- MyActionBarWidgetHoloLightSolidInverse styles -->
    <style name="MyActionBarWidgetHoloLightSolidInverse" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:actionBarStyle">@style/MyActionBarTitleTextPrimary</item>
    </style>


    <!-- +++++ in used +++++ -->
    <!-- Widget.Holo.ActionBar styles -->
    <style name="MyActionBarWidgetHoloActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleTextAppearanceDeviceDefaultWidgetHoloBackgroundLight</item>
    </style>
    <!-- _____ in used _____ -->

    <!-- +++++ TextAppearance_DeviceDefault_Widget_ActionBar_Title +++++ -->
    <style name="MyActionBarTitleTextAppearanceDeviceDefaultWidgetHoloBlueBright" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/holo_blue_bright</item>
    </style>
    <style name="MyActionBarTitleTextAppearanceDeviceDefaultWidgetHoloBlueDark" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/holo_blue_bright</item>
    </style>
    <style name="MyActionBarTitleTextAppearanceDeviceDefaultWidgetHoloBlueLight" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>
    <style name="MyActionBarTitleTextAppearanceDeviceDefaultWidgetHoloBackgroundDark" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/background_dark</item>
    </style>
    <style name="MyActionBarTitleTextAppearanceDeviceDefaultWidgetHoloBackgroundLight" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/background_light</item>
    </style>
    <!-- _____ TextAppearance_DeviceDefault_Widget_ActionBar_Title _____ -->

    <!-- ActionBar title text Primary -->
    <style name="MyActionBarTitleTextPrimary" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <!-- ActionBar title text Secondary -->
    <style name="MyActionBarTitleTextSecondary" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/secondary_text_dark</item>
    </style>

</resources>
